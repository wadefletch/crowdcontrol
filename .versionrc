{
  "types": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "perf", "section": "Performance Improvements" },
    { "type": "refactor", "section": "Code Refactoring" },
    { "type": "docs", "section": "Documentation" },
    { "type": "deps", "section": "Dependencies" },
    { "type": "chore", "hidden": true },
    { "type": "style", "hidden": true },
    { "type": "test", "hidden": true },
    { "type": "build", "hidden": true },
    { "type": "ci", "hidden": true }
  ],
  "commitUrlFormat": "https://github.com/yourorg/crowdcontrol/commit/{{hash}}",
  "compareUrlFormat": "https://github.com/yourorg/crowdcontrol/compare/{{previousTag}}...{{currentTag}}",
  "issueUrlFormat": "https://github.com/yourorg/crowdcontrol/issues/{{id}}",
  "userUrlFormat": "https://github.com/{{user}}",
  "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
  "scripts": {
    "prebump": "echo 'Preparing release...'",
    "postbump": "echo 'Release prepared. Version: {{currentTag}}'",
    "prerelease": "echo 'Creating release...'",
    "postrelease": "echo 'Release created: {{currentTag}}'"
  }
}